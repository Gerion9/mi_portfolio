    {Object.entries(tagCategories).map(([category, tags]) => (
      <div class="bg-gray-800 p-4 rounded-lg">
        <button class="category-filter w-full text-left font-semibold text-indigo-300 hover:text-indigo-100 transition-colors duration-300 flex items-center" data-selected="false">
          <span class="mr-2">{getCategoryIcon(category)}</span>
          <span class="text-sm">{category}</span>
        </button>
        <div class="mt-2 space-y-2 hidden">
          {tags.map((tag) => (
            <button class="tag-filter w-full text-left text-white text-xs py-1 px-2 rounded transition duration-300 hover:bg-gray-700" data-selected="false">
              {tag}
            </button>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>

      <div class="space-y-16">
        {projects.map((project) => (
          <div class="bg-gray-800 p-8 rounded-lg shadow-lg project" data-date={project.date} data-tags={project.tags?.join(',')}>
            <h2 class="text-3xl font-bold mb-4 text-pink-500">{project.title}</h2>
            <p class="text-xl text-gray-400 mb-6">
              {project.company}, {project.date ? new Date(project.date).getFullYear() : 'N/A'}
            </p>
            <div class="mb-4 flex flex-wrap gap-2">
              {project.tags && project.tags.map((tag) => (
                <span class="bg-indigo-600 text-white px-2 py-1 rounded-full text-xs">{tag}</span>
              ))}
            </div>
            <ul class="list-disc list-inside space-y-4 text-lg">
              {project.description && project.description.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
            <p class="mt-8 text-lg">Impact: {project.impact}</p>
