</Layout>

<script>
  const categoryButtons = document.querySelectorAll('.category-filter');
  const tagButtons = document.querySelectorAll('.tag-filter');
  const projects = document.querySelectorAll('.project');
  let selectedTags: Set<string> = new Set();

  categoryButtons.forEach(button => {
    button.addEventListener('click', () => {
      const isSelected = button.getAttribute('data-selected') === 'true';
      const tagContainer = button.nextElementSibling;
      
      if (isSelected) {
        button.setAttribute('data-selected', 'false');
        button.classList.remove('text-indigo-100');
        button.classList.add('text-indigo-300');
        tagContainer.classList.add('hidden');
      } else {
        button.setAttribute('data-selected', 'true');
        button.classList.remove('text-indigo-300');
        button.classList.add('text-indigo-100');
        tagContainer.classList.remove('hidden');
      }
    });
  });

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tag = button.textContent?.trim() || '';
      const isSelected = button.getAttribute('data-selected') === 'true';
      
      if (isSelected) {
        selectedTags.delete(tag);
        button.setAttribute('data-selected', 'false');
        button.classList.remove('bg-indigo-600');
        button.classList.add('bg-gray-800');
      } else {
        selectedTags.add(tag);
        button.setAttribute('data-selected', 'true');
        button.classList.remove('bg-gray-800');
        button.classList.add('bg-indigo-600');
      }
      
      filterProjects();
    });
  });

function filterProjects() {
  projects.forEach(project => {
    if (project instanceof HTMLElement) {
      const projectTags = project.dataset.tags?.split(',') || [];
      const shouldShow = selectedTags.size === 0 || Array.from(selectedTags).every(tag => typeof tag === 'string' && projectTags.includes(tag));
      project.style.display = shouldShow ? 'block' : 'none';
    }
  });
}
</script>
